        xmlns:local="clr-namespace:AssignmentProject"
        mc:Ignorable="d"
        Title="AdminPage" Height="450" Width="800">
    <Grid>

        <Image Margin="33,0,533,343" Source="/img/logotip-company.png" Stretch="Fill"/>

        <Button x:Name="productButton" Margin="29,104,535,279" Background="#FFF7773D" Content="Products" FontSize="20"/>


        <Button  x:Name="employeeButton" Margin="29,168,535,217" Background="#FFF7773D" Content="Employee" FontSize="20" Click="showEmployee_Click"/>

        <Button x:Name="reportButton" Margin="29,230,535,154" Background="#FFF7773D" Content="Report" FontSize="20"/>

        <Button x:Name="passwordButton" Margin="29,294,535,88" Background="#FFF7773D" Content="Change Password" FontSize="20"/>

        <Button x:Name="logoutButton" Margin="31,357,533,25" Background="#FFF7773D" Content="Log out" FontSize="20"/>

        <Frame x:Name="Main" Margin="289,10,24,25"/>
